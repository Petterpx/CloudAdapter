<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloud.adapter.ui.activity.MainActivity">

    <Button
        android:id="@+id/btnAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通RecyclerView列表"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通多ItemType"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnPagingAdapter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdapter"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnPagingAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paging-单adapter"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnPagingNetToLocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnType"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnPagingNetToLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paging-room-adapter"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnPagingType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPagingAdapter"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnPagingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="paging-多itemType"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPagingNetToLocal"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>